<% provide :title, @document.name %>

<div class="container-fluid">
  <div class="col-md-4">
    <p id="notice"><%= notice %></p>

    <div class="panel panel-default">
      <div class="panel-body">
            <p>
              <strong>Name:</strong>
              <%= @document.name %>
            </p>

            <p>
              <strong>Project Name :</strong>
              <%= @document.group.name %>
            </p>

            <p>
              <strong>Uploaded by :</strong>
              <%= @document.user.email %>
            </p>

            <p>
              <strong>Upload time :</strong>
              <%= time_ago_in_words @document.created_at %> ago
            </p>

            <!-- <% if @document.user == current_user %>
              <%# link_to 'Edit', edit_document_path(@document) %> |
            <% end %> -->


            <a href="<%= root_path %>" class="btn btn-info btn-sm text-uppercase">
              <span class="glyphicon glyphicon-backward"></span> Back
            </a>


            <% if @document.file? && (current_user.has_role? :viewUser) %>
              <a href="<%= download_doc_document_path(@document) %>" target="_blank" class="btn btn-success btn-sm">
                <span class="glyphicon glyphicon-download-alt"></span> Download
              </a>
            <% end %>

      </div>
    </div>


  </div>

  <div class="col-md-8">
    <% if @document.file? %>
      <iframe src="<%= @document.file.url %>" style="height: 85vh; padding: 0%;" class="col-md-12">
          <p>Your browser does not support iframes.</p>
      </iframe>
    <% end %>
  </div>
</div>
