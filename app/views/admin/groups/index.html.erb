<% provide :title, "Projects - Admin" %>

<div class="container-fluid">
  <!-- <p id="notice"><%= notice %></p> -->


  <div class="col-md-2">
    <%= link_to 'Add Project', new_admin_group_path, class: "btn btn-success btn-sm text-uppercase" %>
  </div>

  <div class="col-md-8">
    <section class="all-projects">
      <header>
        <h3>Projects List</h3>
      </header>

      <ol class="list-group">
        <% @groups.each do |group| %>
          <li class="list-group-item clearfix">
            <h4 class="pull-right">
              <small class="text-uppercase">
                <%= link_to 'Show', admin_group_path(group), class: "btn btn-info btn-sm" %>
                <%= link_to 'Edit', edit_admin_group_path(group), class: "btn btn-warning btn-sm" %>
                <%= link_to 'Delete', admin_group_path(group), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
              </small>
            </h4>
            <h3 class="h4">
              <%= group.name %> <br>
              <small>
                Description : <%= group.purpose %> <br>
                Users : <%= group.users.count %>
              </small>
            </h3>
          </li>
        <% end %>
      </ol>
    </section>
  </div>

  <div class="col-md-2">

  </div>



</div>
