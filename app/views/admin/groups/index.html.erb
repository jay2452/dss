<div class="container-fluid">
  <p id="notice"><%= notice %></p>

  <h1>Projects</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Project Name</th>
        <th>Purpose</th>
        <th>User count</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td><%= group.name %></td>
          <td><%= group.purpose %></td>
          <td><%= group.users.count %></td>
          <td><%= link_to 'Show', admin_group_path(group) %></td>
          <td><%= link_to 'Edit', edit_admin_group_path(group) %></td>
          <td><%= link_to 'Destroy', admin_group_path(group), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Project', new_admin_group_path %>

</div>
