<% provide :title, @group.name + " - Admin" %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-2"></div>

    <div class="col-md-8">
      <div class="panel panel-default">
        <div class="panel-body">
          <small class="pull-right text-uppercase">
            <button type="button" class="btn btn-info btn-sm text-uppercase" data-toggle="modal" data-target="#myModal">Add new User</button>
            <%= link_to 'Back', admin_groups_path, class: "btn btn-primary btn-sm" %>
          </small>
          <p>
            <strong>Project Name:</strong>
            <%= @group.name %>
          </p>

          <p>
            <strong>Purpose:</strong>
            <%= @group.purpose %>
          </p>
        </div>
      </div>
    </div>

    <div class="col-md-2">

    </div>
  </div>


  <div class="row">
    <div class="col-md-6">

      <section>
        <header>
          <h3 class="h4">Documents Uploaded (<%= @documents.count %>)</h3>
        </header>

        <ol class="list-group">
          <% @documents.each do |document| %>
            <li class="list-group-item clearfix">
              <h4 class="pull-right">
                <small class="text-uppercase">
                  <%= link_to "show", admin_document_path(document), class: "btn btn-info btn-sm" %>
                </small>
              </h4>
              <h3 class="h4">
                <%= document.name %> <br>
              </h3>
            </li>
          <% end %>
        </ol>
      </section>

    </div>

    <div class="col-md-6">

      <section>
        <header>
          <h3 class="h4">Users Associated (<%= @group.users.count %>) </h3>
        </header>

        <ol class="list-group">
          <% @group.users.each do |user| %>
            <li class="list-group-item clearfix">
              <h4 class="pull-right">
                <small class="text-uppercase">
                  <%= link_to "Show", admin_user_path(user), class: "btn btn-info btn-sm" %>
                  <%= link_to "Remove", remove_user_admin_group_path(u_id: user.slug), data: {confirm: "Are you sure"} ,class: "btn btn-danger btn-sm" %>
                </small>
              </h4>
              <h3 class="h4">
                <%= user.email %>
              </h3>
            </li>
          <% end %>
        </ol>
      </section>

    </div>
  </div>
</div>

<%= render :partial => "/groups/add_user_group" %>
