<% provide :title, "Documents" %>
<div class="container-fluid">
    <div id="wrapper" style="margin-top: -1.3%;">
      <div id="sidebar-wrapper" data-turbolinks="false">
              <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="<%= root_path %>"><i class="fa fa-tachometer" aria-hidden="true"></i> &nbsp;
                        Home
                    </a>
                </li>
                  <li>
                    <a href="<%= admin_users_path %>"><i class="fa fa-users" aria-hidden="true"></i> &nbsp; Users</a>
                  </li>
                  <li>
                    <a href="<%= admin_documents_path %>"> <i class="fa fa-files-o" aria-hidden="true"></i> &nbsp; Documents </a>
                  </li>
                  <li>
                    <a href="<%= new_admin_document_path %>"> <i class="fa fa-upload" aria-hidden="true"></i>&nbsp; Upload Document</a>
                  </li>
                  <!-- <li><a href="#">Uploaded Documents</a></li>
                  <li><a href="#">Sent Documents</a></li> -->
                  <li>
                    <a href="/admin/documents/recycle_bin"><span class="glyphicon glyphicon-trash"></span> &nbsp; Trash </a>
                  </li>
                  <!-- <li><%= link_to "Back", :back %></li> -->
              </ul>
          </div>

          <!-- Page Content -->
          <div id="page-content-wrapper">
              <div class="container-fluid">
                  <div class="row">
                      <div class="col-lg-12">
                        <div class="container-fluid">
                          <div class="col-md-6">
                            <h3 class="h3" align="left">Documents</h3>
                          </div>
                          <div class="col-md-6">
                            <h3 class="h3" align="right">Total : <%= Document.where("deleted = ?", false).count %></h3>
                          </div>
                        </div>
                          <div id="documents">
                              <div class="panel-group" id="accordion">
                                <% $j = 1 %>
                                <%= render @documents %>
                              </div>
                          </div>
                          <%= will_paginate @documents %>
                      </div>
                  </div>
              </div>
          </div>
          <!-- /#page-content-wrapper -->


    </div>


</div>
