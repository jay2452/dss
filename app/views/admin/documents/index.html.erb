<% provide :title, "Documents" %>
<div class="container-fluid">

    <div class="col-md-2">
      <a href="<%= new_admin_document_path %>" class="btn btn-success btn-sm text-uppercase">
        <span class="glyphicon glyphicon-cloud-upload"></span> Upload Document
      </a>
    </div>
    <div class="col-md-8">
      <div id="documents">
        <section>
          <header>
            <div class="container-fluid">
              <div class="col-md-6">
                <h3 class="h3" align="left">Documents</h3>
              </div>
              <div class="col-md-6">
                <h3 class="h3" align="right">Total : <%= Document.where("deleted = ?", false).count %></h3>
              </div>
            </div>
          </header>

          <ol class="list-group">
            <%= render @documents %>
          </ol>
        </section>
      </div>
      <%= will_paginate @documents %>
    </div>

    <div class="col-md-2"></div>

</div>
