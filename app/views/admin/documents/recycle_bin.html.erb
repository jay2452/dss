<% provide :title, "Recycle Bin" %>

<div class="container">
  <div class="col-md-3">

  </div>

  <div class="col-md-6">
    <% if @documents.empty? %>
      <div class="jumbotron">
        <h3 class="h2" align="center"> Trash Empty !!</h3>
      </div>
    <% else %>
      <h3 class="h4" align="center">Deleted Documents</h3>
      <% @documents.each do |document| %>
        <%= document.name %>  <%= link_to "Restore", restore_document_admin_document_path(document) %>  <br>
      <% end %>
    <% end %>
  </div>

  <div class="col-md-3">

  </div>
</div>
