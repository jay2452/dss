<%= form_for([:admin, @document]) do |f| %>
  <% if @document.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@document.errors.count, "error") %> prohibited this document from being saved:</h2>

      <ul>
      <% @document.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control", placeholder: "Document Name" %>
  </div>
  <div class="form-group">
    <%= f.label :project_id %> <br>
    <small>(Select a project for the document for which it belongs to)</small>
    <%# f.number_field :document_category_id %>

    <%= f.select :group_id, Group.all.collect { |p| [ p.name, p.id ] }, {include_blank: true},{class: "form-control"} %>
  </div>

  <div class="form-group">
    <div class="pull-right">
      <% if @document.file? %>
        <%= link_to @document.file_file_name, @document.file.url, target: "_blank" %>
      <% end %> <br>
      <small>Please upload only pdf, jpg, jpeg, png and gif format files</small>
    </div>

   	<%= f.label :file %><br>
    <%= f.file_field :file %>
  </div>

  <div class="form-group">
    <%= f.submit "Upload", class: "btn btn-success btn-sm text-uppercase" %>
  </div>
<% end %>
