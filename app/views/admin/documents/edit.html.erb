<% provide :title, "Edit - #{@document.name} | Admin" %>
<div class="container">

  <div id="wrapper" style="margin-top: -1.3%;">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
              <li class="sidebar-brand">
                  <a href="<%= root_path %>"><i class="fa fa-tachometer" aria-hidden="true"></i> &nbsp;
                      Home
                  </a>
              </li>

              <li>
                  <a>
                    <% if @document.file_content_type == 'application/pdf' %>
                      <i class="fa fa-file-pdf-o" aria-hidden="true"></i>
                    <% else %>
                      <i class="fa fa-file-image-o" aria-hidden="true"></i>
                    <% end %> &nbsp;
                     <%= @document.name %>
                   </a>
              </li>

              <li>
                <a href="#"><span class="glyphicon glyphicon-exclamation-sign"></span> &nbsp; <%= sprintf( "%0.02f", @document.file.size.to_f / 1.megabyte) %> MB</a>
              </li>
              <li>
                  <a href="#"> <span class="fa fa-folder-open-o"></span> &nbsp;<%= @document.group.name %></a>
              </li>
              <li>
                  <a href="<%= admin_user_path(@document.user) %>"><span class="fa fa-user"></span>&nbsp; <%= @document.user.email %></a>
              </li>
              <li>
                  <a> <span class="glyphicon glyphicon-time"></span> &nbsp; <%=  @document.created_at.strftime("%d-%m-%Y | %H:%M") %> </a>
              </li>

              <li>
                <a href="<%= admin_documents_path %>"> <i class="fa fa-files-o" aria-hidden="true"></i> &nbsp; Documents </a>
              </li>
              <li>
                <a href="<%= new_admin_document_path %>"> <i class="fa fa-upload" aria-hidden="true"></i>&nbsp; Upload Document</a>
              </li>

              <li>
                <a href="/admin/documents/recycle_bin"><span class="glyphicon glyphicon-trash"></span> &nbsp; Trash </a>
              </li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                      <div class="col-md-2">

                      </div>

                      <div class="col-md-8">
                        <div class="panel panel-default">
                          <div class="panel-body">
                            <h1 class="h3">Edit Document</h1>

                            <%= render 'form' %>

                            <%# link_to 'Show', admin_document_path(@document), class: "btn btn-info btn-sm text-uppercase" %>

                          </div>
                        </div>
                      </div>

                      <div class="col-md-2">

                      </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

</div>
