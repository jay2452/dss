<h3>List of all users</h3>
<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Email</th>
      <th colspan="3">Roles</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>

    <tr>
      <td><%= user.id %></td>
      <td><%= user.email %></td>

      <% fetch_roles(user.id).each do |role| %> <%# to fetch the roles of each user and it is defined in the usershelper.rb %>
        <td><%= role %></td>
      <% end %>

      <td><%= link_to "Delete", admin_user_path(user), method: :delete, class: "btn btn-danger sm" %></td>
    </tr>

    <% end %>
  </tbody>
</table>
