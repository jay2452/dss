<% provide :title, "Welcome" %>
<div class="container-fluid">

  <div id="wrapper" style="margin-top:-1.3%;">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
              <li class="sidebar-brand">
                <a href="<%= root_path %>"><i class="fa fa-tachometer" aria-hidden="true"></i> &nbsp;
                    Home
                </a>
              </li>
                <li><a data-toggle="tooltip" title="User Name : <%= current_user.username %>"><span class="glyphicon glyphicon-user"></span> &nbsp; <%= current_user.username %> </a></li>
                <li><a data-toggle="tooltip" title="User Email : <%= current_user.email %>"><i class="fa fa-envelope" aria-hidden="true"></i>&nbsp; <%= current_user.email %> </a></li>

                <li><a data-toggle="tooltip" title="User Role : View User"><i class="fa fa-eye" aria-hidden="true"></i> &nbsp; View User</a></li>

                <% @user_groups.each do |project| %>
                  <li><a href="<%= doc_project_path(project: project.id) %>"> <i class="fa fa-folder" aria-hidden="true"></i> &nbsp; <%= project.name %> </a></li>
                <% end %>

                <li><a href="users/edit"><i class="fa fa-cogs" aria-hidden="true"></i> &nbsp; Change Password</a></li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                      <div class="col-md-1"></div>
                        <div class="col-md-10">
                          <% if @document_groups.empty? %>
                            <div class="jumbotron">
                              <h3 align="center"> No Documents</h3>
                            </div>
                          <% else %>
                            <h4 align="center"> Recent Documents</h4>
                            <div id="recent-docs">
                              <%= render @document_groups %>
                            </div>
                            <%= will_paginate @document_groups %>
                          <% end %>
                        </div>

                      <div class="col-md-1"></div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->




</div>
