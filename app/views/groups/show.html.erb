<% provide :title, @group.name %>
<div class="container-fluid">
  <p id="notice"><%= notice %></p>

  <div class="col-md-6">

    <p>
      <strong>Name:</strong>
      <%= @group.name %>
      <br>
      <strong>Created by : </strong>
      <%= @group.user.email if @group.user != nil %>
    </p>

    <p>
      <strong>Purpose:</strong>
      <%= @group.purpose %>
    </p>

    <% if (can? :update, Group) && @group.user == current_user %>
      <%= link_to 'Edit', edit_group_path(@group) %> |
    <% end %>

    <%= link_to 'Back', groups_path %>

  </div>

  <div class="col-md-6">
    <h4>List of users associated with this project
      <% if (can? :create, UserGroup) && @group.user == current_user %>
        (<u><span data-toggle="modal" data-target="#myModal">Add User</span></u>) </h4>
      <% end %>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Id</th>
          <th>Email</th>
        </tr>
      </thead>

      <tbody>
        <% @group.users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.email %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


<%= render partial: "groups/add_user_group" %>
