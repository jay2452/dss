<% provide :title, "Projects List" %>
<div class="container-fluid">
  <p id="notice"><%= notice %></p>

  <h1>Listing Projects</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Purpose</th>
        <th>User count</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td><%= group.name %></td>
          <td><%= group.purpose %></td>
          <td><%= group.users.count %></td>
          <td><%= link_to 'Show', group_path(group) %></td>
          <% if (can? :update, Group) && group.user == current_user %>
            <td><%= link_to 'Edit', edit_group_path(group) %></td>
          <% end %>
          <% if can? :destroy, Group %>
            <td><%= link_to 'Destroy', group_path(group), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <% if can? :create, Group %>
    <%= link_to 'New Project', new_group_path %>
  <% end %>



</div>
