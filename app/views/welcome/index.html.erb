  <%= render :partial => "admin_dash_board" %>
<% else %>
  <% provide :title, "Welcome" %>
  <%# render template: "documents/index" %>


    <div class="container-fluid">
      <% if current_user && (can? :create, Document) %>
          <%= link_to 'Upload Document', new_document_path %>
      <% end %>

      <div class="col-md-3">
        <% if @user_groups.empty? %>
          <div class="jumbotron">
            <h4 align="center">You are not associated with any project</h4>
          </div>
        <% else %>
          <div class="panel panel-default">
            <div class="panel-heading">Projects Associated</div>
            <div class="panel-body">
              <% @user_groups.each do |group| %>
                <%= group.name %> <br>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="col-md-6">
        <% if @recent_docs.empty? %>
          <div class="jumbotron">
            <h3 align="center"> No Files</h3>
          </div>
        <% else %>
          <h4 align="center"> Recent Documents</h4>

          <% @recent_docs.each do |doc| %>
            <div class="panel panel-default">
              <div class="panel-body">
                <%= link_to doc.name, document_path(doc) %> <br>
                uploaded : <small><%= time_ago_in_words(doc.created_at) %> ago <br>
                </small> uploaded by: <small><%= doc.user.email %></small> <br>
              </div>
            </div>
          <% end %>
        <% end %>


      </div>

      <div class="col-md-3">

      </div>
    </div>

