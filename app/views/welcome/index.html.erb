<% if current_user.has_role? :admin %>
    <%# goto admin adsh board %>
    <% provide :title, "Welcome - Admin" %>
  <%= render :partial => "admin_dash_board" %>
<% else %>
  <% provide :title, "Welcome" %>
  <%# render template: "documents/index" %>
    <h2>Recent Documents <small>(both approved and unapproved)</small></h2>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>category</th>
          <th>uploaded by</th>
          <th>download</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @documents.each do |document| %>
          <tr>
            <td><%= document.name %></td>
            <td><%= document.document_category.name %></td>
            <td><%= document.user.email %></td>
            <td><%= link_to "view file", document.file.url, target: '_blank' if document.file? %></td>
            <td><%= link_to 'Show', document %></td>
            <td><%= link_to 'Edit', edit_document_path(document) %></td>
            <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

<% end %>
