<% provide :title, "Welcome | Approve User" %>
<div class="container-fluid">

  <div id="wrapper" style="margin-top: -1.3%;">

      <!-- Sidebar -->
      <div id="sidebar-wrapper">
          <ul class="sidebar-nav">
              <li class="sidebar-brand">
                  <a href="#">
                      Home
                  </a>
              </li>

              <li>
                  <a href="#">Approve User</a>
              </li>
              <li>
                  <a href="#">Unapproved Documents</a>
              </li>
              <li>
                  <a href="#">Approved Documents</a>
              </li>

              <div class="footer-place">
                <li><a href="http://www.innovadorslab.com" target="_blank">Powered By: <b>Innovadors Lab Pvt. Ltd.</b></a></li>
              </div>
          </ul>
      </div>
      <!-- /#sidebar-wrapper -->

      <!-- Page Content -->
      <div id="page-content-wrapper">
          <div class="container-fluid">
              <div class="row">
                  <div class="col-lg-12">
                    <div class="col-md-2">

                    </div>

                    <div class="col-md-8">
                      <h5 class="h3" align="center">Pending Approvals</h5>
                      <div class="row">
                        <%= form_tag controller: "welcome", action: "approve", method: "post" do  %>
                          <% @unapproved_documents.each do |document| %>
                            <div class="well">
                              <%= link_to document.name, document_path(document), target: "_blank" %>

                              <span class="pull-right"><%= check_box_tag :"#{document.id}", class: "checkbox" %></span> <br>

                            </div>

                          <% end %>

                            <%= submit_tag "Approve", class: "btn btn-primary btn-sm text-uppercase" %>
                        <% end %>
                      </div>

                    </div>

                    <div class="col-md-2">

                    </div>
                  </div>
              </div>
          </div>
      </div>
      <!-- /#page-content-wrapper -->

  </div>
  <!-- /#wrapper -->


</div>
