<div class="container-fluid">


  <% if current_user.has_role? :superAdmin %>
    <%= render partial: "welcome/super_admin_page" %>
  <% end %>

  <% if current_user && (current_user.has_role? :admin) %>

    <div class="col-md-4">
      <div class="panel panel-success">
        <div class="panel-heading">
          <span class="text-uppercase">Users</span>
          <a href="/admin/users" class="pull-right" class="btn btn-info btn-sm">Show</a>
        </div>
        <div class="panel-body">
          Total Users :  <%= @users.count %> <hr>
          <!-- Users<br> -->
          <% @users.each do |user| %>
            <%= user.email %> <br>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="panel panel-success">
        <div class="panel-heading">
          <span class="text-uppercase">Projects</span>
          <a href="/admin/groups" class="pull-right" class="btn btn-info btn-sm" data-turbolinks="false">Show</a>
        </div>
        <div class="panel-body">
          Total Projects : <%= Group.count %> <hr>

            Recent Projects <br>

            <% @groups.each do |project| %>
              <%= project.name %> <br>
            <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="panel panel-success">
        <div class="panel-heading">
          <span class="text-uppercase">Documents</span>
          <a href="/admin/documents" class="pull-right" class="btn btn-info btn-sm" data-turbolinks="false">Show</a>
        </div>
        <div class="panel-body">
          <header>
            Total Documents : <%= Document.count %> <hr>
            Recent Documents
          </header>

            <% @documents.limit(4).each do |doc| %>
              <%= doc.name %> <br>
            <% end %>

        </div>
      </div>
    </div>

  <% end %>

</div>
